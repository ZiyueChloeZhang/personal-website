---
interface Props {
    label: string;
    link?: string;
}

const { label, link } = Astro.props;
---
<div>
    {link
    ?<a href={link}>{label}</a>
    :<span>{label}</span>}
</div>
<style>
    div {
        display: inline-block;
        background-color: var(--clr-white);
        padding: 0.25rem 1rem 0.25rem 1rem;
        border-radius: 1rem;
        font-size: var(--fs-100);
    }
</style>
